# Shared
NODE_ENV=production
DATABASE_URL=postgres://postgres:postgres@postgres:5432/rss_wrangler

# Postgres container
POSTGRES_DB=rss_wrangler
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# API
API_PORT=4000
API_HOST=0.0.0.0
API_CORS_ORIGIN=*
AUTH_JWT_SECRET=replace-with-a-random-string-at-least-32-chars
AUTH_USERNAME=admin
AUTH_PASSWORD=replace-with-a-strong-password
ACCESS_TOKEN_TTL=15m
REFRESH_TOKEN_TTL=30d

# Worker
WORKER_POLL_MINUTES=60
WORKER_BATCH_SIZE=100
API_BASE_URL=http://api:4000

# Web
NEXT_PUBLIC_API_BASE_URL=http://localhost:4000
NEXT_PUBLIC_DEV_BEARER_TOKEN=
